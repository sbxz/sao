<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    android:background="#32394A"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="10dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_card_view_margin_top_bottom"
        android:paddingLeft="@dimen/base_card_view_margin_left_right"
        android:paddingRight="@dimen/base_card_view_margin_left_right"
        android:paddingTop="@dimen/base_card_view_margin_top_bottom">

        <ImageView
            android:id="@+id/friendThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/side_nav_bar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/friendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="La Kolok"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/friendLocalization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Localisation"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/circle"
        android:paddingRight="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_gravity="bottom"
        android:background="#434A5E"
        android:paddingLeft="10dp" />

</FrameLayout>